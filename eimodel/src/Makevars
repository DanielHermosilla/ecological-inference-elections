## Portable Makevars file for OpenMP, BLAS, and LAPACK

# Standard OpenMP flags using R's build system
PKG_CFLAGS = $(SHLIB_OPENMP_CFLAGS) -fopenmp
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(SHLIB_OPENMP_CFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

# macOS-specific settings
ifeq ($(shell uname -s), Darwin)
    PKG_LIBS += -lomp
endif

# Remap the current directory to a dot so that absolute paths are replaced
CFLAGS += -fdebug-prefix-map=$(CURDIR)=.
CXXFLAGS += -fdebug-prefix-map=$(CURDIR)=.
